<Layout 
  title="Vietnam Travel Guide | Slow Travel with Pankhuri and Kaushal"
  description="Explore our comprehensive guide to Vietnam with day-by-day itinerary, must-see attractions, and travel tips."
>
  <style is:global>
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
      cursor: pointer;
    }

    .modal-content {
      margin: auto;
      display: block;
      max-width: 90%;
      max-height: 90vh;
      margin-top: 2%;
      cursor: default;
      object-fit: contain;
      background-color: transparent;
    }

    .image-caption {
      color: #1a202c;
      padding: 12px;
      text-align: center;
      font-size: 0.95em;
      font-weight: 600;
      background-color: #f3f4f6;
      border-radius: 0.375rem;
      margin-top: 0.5rem;
    }

    .caption {
      margin: auto;
      display: block;
      width: 80%;
      text-align: center;
      color: white;
      padding: 12px;
      font-size: 1.2em;
      font-weight: 600;
    }

    .close {
      position: absolute;
      right: 35px;
      top: 15px;
      color: #f1f1f1;
      font-size: 40px;
      font-weight: bold;
      cursor: pointer;
      z-index: 1001;
      padding: 10px;
    }

    .close:hover {
      color: #bbb;
    }

    .image-container {
      position: relative;
      cursor: pointer;
      margin-bottom: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .image-wrapper {
      width: 100%;
      height: 0;
      padding-bottom: 100%;
      position: relative;
      overflow: hidden;
      border-radius: 0.5rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      transition: transform 0.3s ease;
      background-color: #f8f9fa;
    }

    .image-wrapper:hover {
      transform: scale(1.02);
    }

    .clickable-image {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: auto;
      height: auto;
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
    }

    .clickable-image.active {
      opacity: 1;
    }

    .carousel-dots {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    .carousel-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: #cbd5e0;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .carousel-dot.active {
      background-color: #4a6fa5;
    }

    .day-card {
      background-color: #ffffff;
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
      transition: transform 0.3s ease;
      margin-bottom: 2rem;
    }

    .day-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 6px 8px -1px rgba(0, 0, 0, 0.06), 0 4px 6px -1px rgba(0, 0, 0, 0.04);
    }

    .day-header {
      background-color: #4a6fa5;
      color: white;
      padding: 1rem 1.5rem;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .day-content {
      padding: 1.5rem;
    }

    .section-title {
      color: #456789;
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.75rem;
      border-bottom: 2px solid #e6edf5;
      padding-bottom: 0.5rem;
    }

    .highlight-box {
      background-color: #f5f8fa;
      border-left: 4px solid #4a6fa5;
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 0.5rem;
    }

    .tag {
      display: inline-block;
      background-color: #e6edf5;
      color: #456789;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.875rem;
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .food-section {
      background-color: #f8fafc;
      border-radius: 0.5rem;
      padding: 1rem;
      margin-top: 1rem;
    }

    .quick-info {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }

    .quick-info-item {
      background-color: #f5f8fa;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      color: #456789;
      border: 1px solid #e6edf5;
    }

    .nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      color: white;
      font-size: 36px;
      font-weight: bold;
      cursor: pointer;
      padding: 16px;
      user-select: none;
      background-color: rgba(0, 0, 0, 0.3);
      border-radius: 50%;
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s ease;
    }

    .nav:hover {
      background-color: rgba(0, 0, 0, 0.6);
    }

    .prev {
      left: 20px;
    }

    .next {
      right: 20px;
    }
  </style>

