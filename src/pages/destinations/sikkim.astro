<script defer>
  // Defer the modal JavaScript functionality
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('imageModal');
    const modalImg = document.getElementById('modalImage');
    const modalCaption = document.getElementById('modalCaption');
    const closeBtn = document.getElementById('closeModal');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    
    let currentImageIndex = 0;
    let currentCarouselImages = [];
    let currentCarouselCaptions = [];
    
    // Add click handlers to all carousel images
    document.querySelectorAll('.carousel-image').forEach(img => {
      img.addEventListener('click', () => {
        // Find the carousel container to get the caption
        const carouselContainer = img.closest('.carousel-container');
        const imageContainer = img.closest('.carousel-image-container');
        const index = Array.from(carouselContainer.querySelectorAll('.carousel-image-container')).indexOf(imageContainer);
        const caption = carouselContainer.querySelector(`.carousel-caption[data-index="${index}"] p`)?.textContent || '';
        
        modal.classList.remove('hidden');
        // Allow DOM to update before showing the modal
        setTimeout(() => {
          modal.classList.add('opacity-100');
        }, 10);
        
        modalImg.src = img.src;
        modalCaption.textContent = caption;
        
        // Find all images in the same carousel
        currentCarouselImages = Array.from(carouselContainer.querySelectorAll('.carousel-image'));
        currentImageIndex = currentCarouselImages.indexOf(img);
        
        // Get all captions
        currentCarouselCaptions = Array.from(carouselContainer.querySelectorAll('.carousel-caption p'))
          .map(el => el.textContent || '');
      });
    });
    
    // Navigation functions
    function showNextImage() {
      modalImg.classList.add('scale-95');
      setTimeout(() => {
        if (currentCarouselImages.length > 0) {
          currentImageIndex = (currentImageIndex + 1) % currentCarouselImages.length;
          modalImg.src = currentCarouselImages[currentImageIndex].src;
          modalCaption.textContent = currentCarouselCaptions[currentImageIndex] || '';
        }
        modalImg.classList.remove('scale-95');
      }, 150);
    }
    
    function showPrevImage() {
      modalImg.classList.add('scale-95');
      setTimeout(() => {
        if (currentCarouselImages.length > 0) {
          currentImageIndex = (currentImageIndex - 1 + currentCarouselImages.length) % currentCarouselImages.length;
          modalImg.src = currentCarouselImages[currentImageIndex].src;
          modalCaption.textContent = currentCarouselCaptions[currentImageIndex] || '';
        }
        modalImg.classList.remove('scale-95');
      }, 150);
    }
    
    // Close modal
    function closeModal() {
      modal.classList.remove('opacity-100');
      setTimeout(() => {
        modal.classList.add('hidden');
      }, 300);
    }
    
    closeBtn.addEventListener('click', closeModal);
    
    // Add navigation event listeners
    nextBtn.addEventListener('click', showNextImage);
    prevBtn.addEventListener('click', showPrevImage);
    
    // Close with ESC key and handle arrow navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
      
      if (!modal.classList.contains('hidden')) {
        if (e.key === 'ArrowRight') {
          showNextImage();
        } else if (e.key === 'ArrowLeft') {
          showPrevImage();
        }
      }
    });
    
    // Close when clicking outside the image
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });
    
    // Touch swipe support for mobile
    let touchStartX = 0;
    let touchEndX = 0;
    
    modalImg.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });
    
    modalImg.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });
    
    function handleSwipe() {
      const swipeThreshold = 50;
      if (touchEndX < touchStartX - swipeThreshold) {
        // Swiped left, show next image
        showNextImage();
      } else if (touchEndX > touchStartX + swipeThreshold) {
        // Swiped right, show previous image
        showPrevImage();
      }
    }
  });
</script>