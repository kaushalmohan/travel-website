---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import ItineraryDay from '../../components/ItineraryDay.astro';

// SEO metadata
const title = "Oman Travel Guide: 13-Day Itinerary | Lifeing Together";
const description = "Explore our comprehensive Oman travel guide with a detailed 13-day itinerary covering Muscat, Nizwa, Wadi Shab, Ras Al Jinz, Wahiba Sands, and more. Discover the best places to visit and travel tips.";

// Fix for URL handling - gracefully handle when Astro.site is undefined
const siteUrl = Astro.site?.toString() || 'https://justlifeingtogether.in';
const canonicalURL = new URL('/destinations/oman', new URL(siteUrl)).toString();
const ogImage = "/images/oman/hero-image/hero_image.webp";
const absoluteImageUrl = new URL(ogImage, new URL(siteUrl)).toString();

// Define structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "TravelGuide",
  "name": "Oman Travel Guide: 13-Day Itinerary",
  "author": {
    "@type": "Person",
    "name": "Pankhuri and Kaushal"
  },
  "description": "A comprehensive 13-day Oman travel guide with detailed itinerary covering Muscat, Nizwa, Wadi Shab, Ras Al Jinz, Wahiba Sands, and more.",
  "datePublished": "2025-11-12",
  "dateModified": new Date().toISOString().split('T')[0],
  "image": absoluteImageUrl,
  "inLanguage": "en",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL
  },
  "about": {
    "@type": "Place",
    "name": "Oman",
    "description": "Sultanate on the Arabian Peninsula known for its deserts, wadis, forts, and pristine coastline."
  },
  "itinerary": {
    "@type": "ItemList",
    "numberOfItems": 13,
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@type": "TouristDestination",
          "name": "Arrival in Muscat",
          "touristType": ["City Tourism", "Cultural Tourism"]
        }
      },
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@type": "TouristDestination",
          "name": "Dolphin Cruise and Nizwa",
          "touristType": ["Nature Tourism", "Cultural Tourism"]
        }
      },
      {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@type": "TouristDestination",
          "name": "Goat Market and Al Hoota Caves",
          "touristType": ["Cultural Tourism", "Nature Tourism"]
        }
      }
    ]
  },
  "touristType": ["Desert Tourism", "Cultural Tourism", "Adventure Tourism", "Beach Tourism"],
  "keywords": "Oman travel guide, Oman itinerary, Muscat travel guide, Wadi Shab, Ras Al Jinz turtles, Wahiba Sands, Nizwa Fort, things to do in Oman, Oman tourist attractions, Oman travel tips"
};

// Define breadcrumb structured data
const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": new URL('/', new URL(siteUrl)).toString()
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Destinations",
      "item": new URL('/destinations', new URL(siteUrl)).toString()
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Oman",
      "item": canonicalURL
    }
  ]
};
---

<Layout 
  title={title}
  description={description}
>
  <!-- SEO Meta Tags -->
  <link rel="canonical" href={canonicalURL} slot="head" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" slot="head" />
  <meta property="og:url" content={canonicalURL} slot="head" />
  <meta property="og:title" content={title} slot="head" />
  <meta property="og:description" content={description} slot="head" />
  <meta property="og:image" content={absoluteImageUrl} slot="head" />
  <meta property="og:image:alt" content="Oman panoramic view with desert and mountains" slot="head" />
  <meta property="og:site_name" content="Lifeing Together" slot="head" />
  <meta property="og:locale" content="en_US" slot="head" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:url" content={canonicalURL} slot="head" />
  <meta name="twitter:title" content={title} slot="head" />
  <meta name="twitter:description" content={description} slot="head" />
  <meta name="twitter:image" content={absoluteImageUrl} slot="head" />
  <meta name="twitter:image:alt" content="Oman panoramic view with desert and mountains" slot="head" />
  
  <!-- Additional SEO Tags -->
  <meta name="keywords" content="Oman travel guide, Oman itinerary, Muscat travel guide, Wadi Shab, Ras Al Jinz turtles, Wahiba Sands, Nizwa Fort, things to do in Oman, best places to visit in Oman, Oman tourist attractions, Oman travel tips, Oman travel blog" slot="head" />
  <meta name="author" content="Pankhuri and Kaushal" slot="head" />
  
  <!-- Structured Data -->
  <script type="application/ld+json" slot="head">
    {JSON.stringify(structuredData)}
  </script>
  
  <!-- Breadcrumb Structured Data -->
  <script type="application/ld+json" slot="head">
    {JSON.stringify(breadcrumbData)}
  </script>
  
