  <link rel="preload" href="/scripts/dubai.js" as="script">
  <link rel="preload" href="/images/dubai/Hero_image/Heroimage-800w.webp" as="image" type="image/webp" media="(max-width: 800px)">
  <link rel="preload" href="/images/dubai/Hero_image/Heroimage-400w.webp" as="image" type="image/webp" media="(max-width: 400px)">
  
  <!-- Link to external CSS file -->
